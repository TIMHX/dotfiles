function t() {
  # 1. Ëé∑ÂèñËæìÂÖ•Âπ∂ÈÄâÊã©
  local session=$(sesh list -z | fzf --height 40% --reverse --header "Connect to Session")
  # 2. Â¶ÇÊûúÁî®Êà∑Ê≤°ÂèñÊ∂àÈÄâÊã©
  if [[ -n "$session" ]]; then
    # „ÄêÊ†∏ÂøÉ‰øÆÂ§ç„Äë:¬†
    # ‰ΩøÁî® sed ÁßªÈô§ÊâÄÊúâÈùûÊâìÂç∞Â≠óÁ¨¶/ÁâπÊÆäÂõæÊ†á
    # Âπ∂‰ΩøÁî® xargs Â§ÑÁêÜÂèØËÉΩÂ≠òÂú®ÁöÑÊ≥¢Êµ™Âè∑ (~) Ë∑ØÂæÑÂ±ïÂºÄÈóÆÈ¢ò
    local clean_session=$(echo "$session" | sed 's/[^[:print:]]//g' | awk '{print $NF}')
    
    # 3. ËøûÊé•
    sesh connect "$clean_session"
  fi
}

czp() {
    # 1. ÂêåÊ≠•Êú¨Âú∞‰øÆÊîπÂà∞ chezmoi Â§á‰ªΩÁõÆÂΩï
    echo "üîÑ Syncing local changes to source..."
    chezmoi re-add

    local SOURCE_DIR=$(chezmoi source-path)

    # 2. Ê£ÄÊü•ÊòØÂê¶ÊúâÂèòÂä®
    if [ -n "$(git -C "$SOURCE_DIR" status --porcelain)" ]; then
        echo "üßê Current changes in source directory:"
        # ÊâìÂç∞ÁÆÄÁü≠ÁöÑÁä∂ÊÄÅÔºåËÆ©‰Ω†‰∏ÄÁúºÁúãÂá∫Âì™‰∫õÊñá‰ª∂Âèò‰∫Ü
        git -C "$SOURCE_DIR" status --short

        # üõë Ê†∏ÂøÉÊîπËøõÔºö‰∫§‰∫íÂºèËØ¢ÈóÆ
        echo -n "‚ö†Ô∏è  Do you want to commit and push these changes? (y/n) "
        read -r answer
        
        if [[ "$answer" =~ ^[Yy]$ ]]; then
            echo "üìù Committing changes..."
            git -C "$SOURCE_DIR" add .
            git -C "$SOURCE_DIR" commit -m "Auto-update: $(date +'%Y-%m-%d %H:%M:%S')"
            
            echo "üì§ Pushing to remote..."
            git -C "$SOURCE_DIR" push
            echo "‚úÖ Done!"
        else
            echo "‚úñÔ∏è  Push cancelled. Changes are kept in the source directory but not pushed."
        fi
    else
        echo "‚ú® Everything is up to date."
    fi
}

cza() {
    if [ -z "$1" ]; then
      echo "Usage: cza <file_path>"
        return 1
    fi
    chezmoi add "$1"
    echo "‚ûï Added $1 to chezmoi."
    czp # Ëá™Âä®Ë∞ÉÁî®‰∏äÈù¢ÁöÑ‰∏ä‰º†ÂáΩÊï∞
}


# Âø´ÈÄü‰ªé GitHub ÊãâÂèñÊõ¥Êñ∞
alias czu='chezmoi update'


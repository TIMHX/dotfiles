# OpenClaw æ ¸å¿ƒå‡½æ•° (å·²é€‚é… Zsh)
openclaw() {
    export OPENCLAW_LOAD_SHELL_ENV=1
    doppler run -- openclaw "$@"
}

# åˆå§‹åŒ– Starship æç¤ºç¬¦
eval "$(starship init zsh)"

# åˆå§‹åŒ– Zoxide (æ›¿ä»£ cd)

# å¿«é€ŸåŒæ­¥æœ¬åœ°æ”¹åŠ¨åˆ° GitHub
czp() {
    echo "ðŸ“¦ æ­£åœ¨åŒæ­¥é…ç½®åˆ° chezmoi..."
    # åŒæ—¶å¼ºåˆ¶æ·»åŠ  zshrc å’Œ nvim é…ç½®æ–‡ä»¶å¤¹
    chezmoi add --force ~/.zshrc
    chezmoi add --force ~/.config/nvim
    
    local cp=$(chezmoi source-path)
    
    # æ‰§è¡Œ Git åŒæ­¥
    git -C "$cp" add -A
    if git -C "$cp" commit -m "update dotfiles: $(date +%H:%M:%S)"; then
        echo "ðŸš€ æ­£åœ¨æŽ¨é€è‡³ GitHub..."
        git -C "$cp" push origin main
        echo "âœ… å…¨éƒ¨åŒæ­¥å®Œæˆï¼"
    else
        echo "âœ¨ é…ç½®æ— å˜åŠ¨ï¼Œæ— éœ€æŽ¨é€ã€‚"
    fi
}

# å¿«é€Ÿä»Ž GitHub æ‹‰å–æ›´æ–°
alias czu='chezmoi update'

